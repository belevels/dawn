{% style %}
{%- for product in collections['all'].products -%}
{% assign productCollections = product.collections | map: "handle" %}
  {% if productCollections contains 'esenciales' %} 
    {% comment %} DoSomething {% endcomment %}
    .{{- product.handle -}}.color-background-2 {
      background-color: #F2E8E0;
      background-image: linear-gradient(333deg, rgba(214,197,185,1) 0%, rgba(234,218,202,1) 50%, rgba(243,233,225,1) 100%);
    }
    .{{- product.handle -}}.card .card__informationx {
        background: rgba(234,218,202,.5);
      }
  {% endif %}
  
    {%- if product.metafields.Seccion.CustomColor1 != blank and product.metafields.Seccion.CustomColor2 != blank and product.metafields.Seccion.CustomColor3 != blank -%}
      {%- capture CustomColor1 -%}{{ product.metafields.Seccion.CustomColor1 }}{%- endcapture -%}
      {%- capture CustomColor2 -%}{{ product.metafields.Seccion.CustomColor2 }}{%- endcapture -%}
      {%- capture CustomColor3 -%}{{ product.metafields.Seccion.CustomColor3 }}{%- endcapture -%}

      .{{ product.handle }} .product__info-container .product__description ul li::after,
      .{{ product.handle }} .highlight li:after {
        background-color: {{ CustomColor1 }};
      }
      .{{ product.handle }} .header-wrapper,
      .{{ product.handle }} #MainContent > section,
      .{{ product.handle }} #be-buttons-box {
        background-color: {{ CustomColor3 }};
        border-bottom-width: 0;        
      }
      {% if product.metafields.Seccion.TextColor == true %}
      .{{ product.handle }} #MainContent > section * {
        --color-icon: #ffffff;
        color: #ffffff;
      }
      {% endif %}
      .{{- product.handle -}}.cardx::after {
        content: '';
        width: 15%;
        height: 15%;
        position: absolute;
        background-color: {{ CustomColor3 }};
        background-image: url( '{{ product.handle | append: '.svg' | asset_url }}' );
        background-size: contain;
        background-repeat: no-repeat;
        top: 5%;
        left: 5%;
        z-index: 1;
      }
      .{{- product.handle -}}.card::before {
        content: '';
        width: 80%;
        height: 80%;
        margin: 10%;
        position: absolute;
        background-color: {{ CustomColor3 }};
        background-image: url( '{{ product.handle | append: '.svg' | asset_url }}' );
        background-size: 100%;
        background-repeat: no-repeat;
        opacity: 0.05;
        background-position-x: right;
        background-position-y: top;
      }      
      .{{- product.handle -}}.card .card__information,
      .{{- product.handle -}}.card .quick-add {
        background: #ffffff;
        margin: 0;
        padding: 1.3rem;
      }
    {%- endif -%}
  {%- endfor -%}

  .shopify-section-header-sticky.scrolled-past-header .header-wrapper {
    background: rgb(var(--color-background));
    background: var(--gradient-background);
    border-bottom-width: .1rem;
  }
  .global-media-settings {
    background-color: rgba(var(--color-background), 0);
  }

  .localization-selector + .disclosure__list-wrapper {
    top: 100% !important;
    bottom: unset !important;
    right: 20px !important;
    margin: 1rem 0 0 !important;
  }

  .localization-selector {
    font-size: 1.125rem;
    color: rgb(var(--color-link));
    border-radius: 40px;
    background: var(--color-background);
    width: 24px;
    height: 24px;
    cursor: pointer;
    border: .1rem solid rgba(var(--color-link),.55);
    position: absolute;
    top: -9px;
    left: -24px;
  }
  .localization-selector:hover {
    border-color: rgba(var(--color-link),1);
  }


  .product__title *,
  .product-card-wrapper .card__heading {
    font-weight: 700;
  }
  .product__text.subtitle {
    margin-top: 0;
  }

  #be-buttons-box .form__label {
    display: none;
  }

  #be-add-to-cart-box {
    display: flex;
    flex-direction: row;
    margin-top: 3rem;
  }
  #be-add-to-cart-box div,
  #be-buttons-box .product-form__input {
    width: 100%;
    max-width: 100%;
  }
  #be-buttons-box .product-form__input:not(.product-form__quantity) {
    display: flex;
    justify-content: space-around;
  }
  #be-buttons-box .product-form__input input[type="radio"] + label {
    width: calc(50% - 2rem);
  }
  #be-add-to-cart-box .product-form,
  #be-add-to-cart-box .product-form__quantity {
    margin: 0 1rem;
    flex: 0;
  }
{% endstyle %}