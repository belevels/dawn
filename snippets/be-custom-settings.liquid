<style>
  #MainContent > .section .product__info-container .be-box,
  #MainContent > .section .multicolumn.background-primary .multicolumn-card {
    background: rgba(255, 255, 255, 0.75) !important;
  }
  #MainContent > .section .card--card.card--horizontal,
  #MainContent > .section .custom-timeline.image-with-text,
  #MainContent > .section .image-with-text--overlap .image-with-text__content,
  #MainContent > .section .collapsible-row-layout .accordion summary,
  #MainContent > .section .collapsible-row-layout .accordion .accordion__content {
    background: rgba(255, 255, 255, 1);
  }
  .be-box #EcoPack-be-ecopack-add-to-cart-box .accordion__content {
    background: #e8f3ee;
    color: #327544;
  }
  .section-be-sticky-add-to-cart-padding,
  #StickyFooterBar-be-sticky-add-to-cart .opciones .product__accordion.accordion {
    background-color: #ffffff !important;
  }  
</style>
{% style %}
  .product__info-container .product__description ul li::before {
    -webkit-mask: url({{ 'icon-checkmark.svg' | asset_url }}) no-repeat 100% 100%;
      mask: url({{ 'icon-checkmark.svg' | asset_url }}) no-repeat 100% 100%;
  }

  {%- comment -%}
    *************************************************************
    Be Levels - start mod: asignamos colores a colecciones
    *************************************************************
  {%- endcomment -%}  
  {% for product in collections.all.products %}
    {% assign collection_handles = product.collections | map: 'handle' %}
    {% if
      collection_handles contains 'formulas-maestras' or
      collection_handles contains 'salud-femenina' or
      collection_handles contains 'deporte' or
      collection_handles contains 'keto-food'
    %}
      {% capture svgIconUrl %} {{ product.handle | append: '.svg' | asset_url }}{% endcapture %}

      {%- if product.metafields.Seccion.CustomColor1 != blank -%}
        {%- capture customColor1 -%}{{ product.metafields.Seccion.CustomColor1 }}{%- endcapture -%}

        .{{ product.handle }} .product__info-container .product__description ul li::before,
        .product-card-wrapper .{{ product.handle }}.card .button--secondary,
        .{{ product.handle }} .timeline::before,
        .{{ product.handle }} .timeline .timeline-event-thumbnail,
        .{{ product.handle }} .timeline .timeline-event-icon {
          background: {{ customColor1 }};
        }
        .product-card-wrapper .{{ product.handle }}.card .button--secondary {
          color: #ffffff;
        }
      {%- endif -%}

      {%- if product.metafields.Seccion.CustomColor2 != blank -%}
        {%- capture customColor2 -%}{{ product.metafields.Seccion.CustomColor2 }}{%- endcapture -%}
        {%- comment -%}borders{%- endcomment -%}
        .{{ product.handle }} #MainContent * {
          border-color: {{ customColor2 | color_to_hex | color_modify: 'alpha', 0.25 }};
        }
        {%- comment -%}bullets and buttons{%- endcomment -%}
        .{{ product.handle }} .product__info-container .product__description ul li::after {
          background: {{ customColor2 | color_to_hex | color_modify: 'alpha', 0.25 }};
        }
      {%- endif -%}

      {%- if product.metafields.Seccion.CustomColor3 != blank -%}
        {%- capture customColor3 -%}{{ product.metafields.Seccion.CustomColor3 }}{%- endcapture -%}
        {%- assign customColorHex3 = customColor3 | color_to_hex -%}

        {%- comment -%}backgrounds{%- endcomment -%}
        .{{ product.handle }} #MainContent > .section:nth-child(2n+1),
        .{{ product.handle }} #MainContent > .section .multirow.image-with-text--overlap,
        .{{ product.handle }} #MainContent > .section .collapsible-row-layout.color-background-1,
        .collection .product-card-wrapper .{{ product.handle }}.card,
        .zed__navbar-dropdown-content .product-card-wrapper .{{ product.handle }}.card,
        .{{ product.handle }}.quick-add-modal__content-info {
          background-color: {{ customColorHex3 }} !important;
          background-image: linear-gradient(0deg, rgba(255,255,255,0.9121849423363095) 0%, {{ customColorHex3 | color_modify: 'alpha', 1 }} 100%) !important;
        }

        .{{ product.handle }} #MainContent > .section .multicolumn {
          background-color: rgba(255, 255, 255 ,0.75) !important;
          background-image: linear-gradient(0deg, {{ customColorHex3 | color_modify: 'alpha', 1 }} 0%, rgba(255,255,255,0.9121849423363095) 100%) !important;
        }
      {%- endif -%}

      {%- comment -%}
        *************************************************************
        Be Levels - start mod: asignamos colores a essentials
        *************************************************************
      {%- endcomment -%}
    {% elsif
      collection_handles contains 'essentials' or
      collection_handles contains 'esenciales'
    %}
      {% assign svgIconUrl = 'esenciales.svg' | asset_url %}

      {%- comment -%}borders{%- endcomment -%}
      .{{ product.handle }} #MainContent * {
        border-color: rgba(235, 217, 201, 1);
      }

      {%- comment -%}backgrounds{%- endcomment -%}
      .{{ product.handle }} #MainContent > .section:nth-child(2n+1),
      .{{ product.handle }} #MainContent > .section .multirow.image-with-text--overlap,
      .{{ product.handle }} #MainContent > .section .collapsible-row-layout.color-background-1,
      .collection .product-card-wrapper .{{ product.handle }}.card,
      .zed__navbar-dropdown-content .product-card-wrapper .{{ product.handle }}.card,
      .{{ product.handle }}.quick-add-modal__content-info {
        background-color: #F2E8E0 !important;
        background-image: linear-gradient(0deg, rgba(255,255,255,0.9121849423363095) 0%, rgba(242, 232, 224, 1) 100%) !important;
      }

      .{{ product.handle }} #MainContent > .section .multicolumn {
        background-color: rgba(255, 255, 255 ,0.75) !important;
        background-image: linear-gradient(0deg, rgba(242, 232, 224, 1) 0%, rgba(255,255,255,0.9121849423363095) 100%) !important;
      }

      {%- comment -%}bullets and buttons{%- endcomment -%}
      .{{ product.handle }} .product__info-container .product__description ul li::after {
        background: rgba(235, 217, 201, 1);
      }
      .{{ product.handle }} .product__info-container .product__description ul li::before {
        background: rgba(var(--color-foreground),.6);
      }
      .product-card-wrapper .{{ product.handle }}.card .button--secondary,
      .{{ product.handle }} .timeline::before,
      .{{ product.handle }} .timeline .timeline-event-thumbnail,
      .{{ product.handle }} .timeline .timeline-event-icon {
        background: rgba(214, 196, 186, 1);
      }
    {% else %}
      {% assign svgIconUrl = 'dot.svg' | asset_url %}

      .product-card-wrapper .{{ product.handle }}.card .button--secondary,
      .{{ product.handle }} .timeline::before,
      .{{ product.handle }} .timeline .timeline-event-thumbnail,
      .{{ product.handle }} .timeline .timeline-event-icon {
        background: rgba(0, 0, 0, 1);
        color: #ffffff;
      }
    {% endif %}
      .{{ product.handle }} .zed__navbar-main,
      .{{ product.handle }} .global-media-settings {
        background-color: transparent !important;
      }
      {%- comment -%}.{{ product.handle }} #MainContent > section .product .product__media::after,{%- endcomment -%}
      {%- comment -%}.product-card-wrapper .{{ product.handle }}.card .card__media::after,{%- endcomment -%}
      {%- comment -%}product-recommendations .product-card-wrapper .{{ product.handle }}.card .card__media::after,{%- endcomment -%}
      .{{ product.handle }} .product__info-wrapper .product__title h1::after,
      .product-card-wrapper .{{ product.handle }} .card__heading span::after {
        content: '';
        position: absolute;
        width: calc(var(--font-heading-scale) * 3rem);
        height: calc(var(--font-heading-scale) * 3rem);
        margin-top: 0.5rem;
        margin-left: 1rem;
        -webkit-mask-size: cover;
        mask-size: cover;
        background-color: rgba(var(--color-foreground),1);
        -webkit-mask: url({{ svgIconUrl }}) no-repeat 100% 100%;
        mask: url({{ svgIconUrl }}) no-repeat 100% 100%;
      }
      .product-card-wrapper .{{ product.handle }} .card__heading span::after {
        width: calc(var(--font-heading-scale) * 1.25rem);
        height: calc(var(--font-heading-scale) * 1.25rem);
        margin-left: 0.5rem;
        margin-top: 0;
      }
      @media screen and (max-width:749px) {
        .{{ product.handle }} .product__info-wrapper .product__title h1::after {
          width: calc(var(--font-heading-scale) * 2.5rem);
          height: calc(var(--font-heading-scale) * 2.5rem);
        }
      }
  {% endfor %}
{% endstyle %}